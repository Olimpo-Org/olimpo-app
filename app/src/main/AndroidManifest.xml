<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Olimpoapp"
        tools:targetApi="31">
        <activity
            android:name=".presentation.activities.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.activities.CadastroActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.activities.FindCommunitiesActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.activities.CreateCommunityActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.activities.SolicitacaoActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".presentation.activities.SplashScreen"
            android:exported="true"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".data.firebase.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>