<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/Blue">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfile"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_8sdp" />

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:background="@drawable/background_content_bottom"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="@dimen/_100sdp"
            android:text=":("
            android:textColor="@color/Blue"
            android:textSize="@dimen/_55sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="270dp"
            android:text="Opa!"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Parece que algum erro aconteceu, tente carregar novamente"
            android:textSize="@dimen/_18sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/Blue"
            android:paddingLeft="@dimen/_30ssp"
            android:paddingRight="@dimen/_30ssp"
            android:text="Tentar novamente"
            android:textColor="@color/White"
            android:textSize="@dimen/_13ssp"
            app:cornerRadius="@dimen/_100sdp" />

        <TextView
            android:id="@+id/textTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="580dp"
            android:gravity="center"
            android:text="Tentar mais tarde"
            android:textColor="@color/Blue"
            android:textSize="@dimen/_18sdp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>